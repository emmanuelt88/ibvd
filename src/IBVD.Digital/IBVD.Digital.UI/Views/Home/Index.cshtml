                                <ul>
                                    <li>19.30hs - Reuni&oacute;n de oraci&oacute;n</li>
                                </ul>
                                <h3>S&aacute;bado</h3>
                                <ul>
                                    <li>20hs - Reuni&oacute;n de jovenes</li>
                                </ul>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="contact">
    <div class="outer_container">
        <div class="container">
            <div class="row">
                <div class="col col-md-5 col-sm-12"><h1>Contacto</h1></div>
                <div class="col col-md-7 col-sm-12 col-xs-12 center-row" id="contact_content">

                    <form role="form" action="/Home/Contactar" method="post" class="center">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input name="fullname" type="text" class="form-control" id="input_name" required placeholder="Nombre...">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input name="email" type="email" class="form-control" id="input_email" required placeholder="Correo...">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <textarea name="message" rows="3" class="form-control" id="input_message" required placeholder="Mensaje o consulta..."></textarea><br>
                                    <button type="submit" class="btn btn-primary pull-right">ENVIAR</button>
                                </div>
                            </div>
                        </div>
                    </form>




                </div>
            </div>
        </div>
    </div>
</section>
